""""""""""""""""""""""""""""""""""""
" DISPLAY
""""""""""""""""""""""""""""""""""""
" SHOW LINE NUMBERS
set number

" SHOW BRACKET MATCHES
set showmatch

" SHOW LAST COMMAND
set showcmd

""""""""""""""""""""""""""""""""""""
" FORMATTING
""""""""""""""""""""""""""""""""""""
" REPLACE TABS WITH SPACES
set expandtab

" SET TAB LENGTH
set tabstop=2 
set shiftwidth=2

""""""""""""""""""""""""""""""""""""
" BEHAVIOR
""""""""""""""""""""""""""""""""""""
" SEARCH
set ignorecase
set smartcase
set hlsearch

""""""""""""""""""""""""""""""""""""
" KEY REMAPS
""""""""""""""""""""""""""""""""""""
" ESC
inoremap kj <esc>
cnoremap kj <C-C>$
